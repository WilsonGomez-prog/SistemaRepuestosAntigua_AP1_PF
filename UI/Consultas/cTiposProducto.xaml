<Window x:Class="SistemaRepuestosAntigua_AP1_PF.UI.Consultas.cTiposProducto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaRepuestosAntigua_AP1_PF.UI.Consultas"
        mc:Ignorable="d"
        Title="Consulta de Tipos de Productos" Height="475" Width="800" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="15,15,15,10">

            <Label Content="Filtro:" FontSize="15" HorizontalAlignment="Left" Margin="30,5,0,0" />
            <ComboBox x:Name="FiltroComboBox" HorizontalAlignment="Left" Width="120" Height="25" Margin="35,-5,0,0">
                <ComboBoxItem Content="ID del tipo de producto"/>
                <ComboBoxItem Content="Descripcion"/>
            </ComboBox>

            <Label Content="Criterio:" FontSize="15" HorizontalAlignment="Left" Margin="200,-55,0,0" />
            <TextBox x:Name="CriterioTextBox" Width="120" Height="25" HorizontalAlignment="Left" Margin="200,-25,0,0"/>


            <Button x:Name="ConsultarButton" Height="30" Width="75" Margin="100,-30,0,0" Click="ConsultarButton_Click">
                <DockPanel>
                    <TextBlock Margin="0, 0, 0, 0"> Buscar</TextBlock>
                    <Image Source="/Imagenes/search_icon.png" Height="15" HorizontalAlignment="Right" Margin="3,0,0,0"/>
                </DockPanel>
            </Button>

            <DataGrid x:Name="DatosDataGrid" ItemsSource="{Binding}" AutoGenerateColumns="False" Height="350" Width="750" Margin="0,10,0,0" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Tipo ID" Binding="{Binding TipoProductoId}" Width="*"/>
                    <DataGridTextColumn Header="Descripcion" Binding="{Binding Descripcion}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

        </StackPanel>
    </Grid>
</Window>
